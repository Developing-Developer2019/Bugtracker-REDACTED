@model Bugtracker.Models.Account.AccountDTO

<h3>Manage Email</h3>

@using (Html.BeginForm("ChangeEmail", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="form-group input-group">
        <label asp-for="Settings.Email" class="form-label"></label>
        <input asp-for="Settings.Email" class="form-control" disabled />
        <div class="input-group-append">
            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Settings.NewEmail" class="form-label"></label>
        @Html.TextBoxFor(e => e.Settings.NewEmail)
        <span asp-validation-for="Settings.NewEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Change email</button>
}